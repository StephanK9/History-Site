{{#if updateArtworkForm}}
  <h4>Update {{artwork.artist}}'s {{artwork.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="artist">Artist</label>
          {{input value=artist id="artist" placeholder=artwork.artist}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=artwork.title}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value="location" id="location" placeholder=artwork.location}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value="type" id="type" placeholder=artwork.type}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
            {{input value="date" id="date" placeholder=artwork.date}}
        </div>

        <div class="form-group">
          <label for="image">Image</label>
            {{input value="image" id="image" placeholder=artwork.image}}
        </div>

        <button {{action 'update' artwork}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateArtworkForm'}}>Update</button>
  {{/if}}
