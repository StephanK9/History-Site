{{#if addNewArtwork}}
  <h1>Enter a new work of Art:</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="artist">Artist</label>
        {{input value=artist id="artist"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveArtwork1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'artworkFormShow'}}>New Artwork</button>
{{/if}}
